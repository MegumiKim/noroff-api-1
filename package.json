{
  "name": "noroff-api",
  "description": "Noroff API server",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only src/app.ts",
    "start": "node dist/src/app.js",
    "prestart": "npm run build",
    "build": "rimraf dist && tsc -p tsconfig.json && npm run copy-images",
    "prebuild": "prisma generate",
    "copy-images": "copyfiles -u 1 \"src/public/**/*\" dist/src"
  },
  "dependencies": {
    "@fastify/auth": "2.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/jwt": "^5.0.1",
    "@fastify/static": "^5.0.2",
    "@fastify/swagger": "^6.0.1",
    "@prisma/client": "^3.14.0",
    "fastify": "^3.29.0",
    "fastify-zod": "^1.0.0-rc10",
    "zod": "^3.17.3",
    "zod-to-json-schema": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "prisma": "^3.14.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
