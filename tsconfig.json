{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@utils/*": ["./utils/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
